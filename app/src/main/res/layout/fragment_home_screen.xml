<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeScreen">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeScrollAll">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:orientation="vertical"
        android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_homeblack"
                android:id="@+id/homeImage"
                android:layout_marginTop="10dp"
              />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textColor="@color/blue"
            android:textStyle="bold|italic"
            android:textSize="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/homeImage"
            android:id="@+id/homeLabel"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/ddpText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delice de Paris"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Original Paris Style Pizza"
            android:textColor="#272727"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRENDING"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeScroll1">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeRec"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">
        </androidx.recyclerview.widget.RecyclerView>
        </ScrollView>
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeSearchLogo"
                android:src="@drawable/ic_searchblack"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:id="@+id/homeSearchLabel"
                    android:layout_below="@+id/homeSearchLogo"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="70dp"
                        android:id="@+id/lineAfterSearch"
                        android:background="@color/black"
                        android:layout_toEndOf="@+id/homeSearchLabel"
                        android:layout_marginLeft="10dp"
                        tools:ignore="Orientation">
                    </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menuHomeImage"
                android:src="@drawable/ic_menuimage"
                android:layout_toEndOf="@+id/lineAfterSearch"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/black"
                android:id="@+id/homeMenuLabel"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_toEndOf="@+id/lineAfterSearch"
                android:layout_below="@+id/menuHomeImage"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="70dp"
                android:id="@+id/lineAfterMenu"
                android:background="@color/black"
                android:layout_toEndOf="@+id/homeMenuLabel"
                android:layout_marginLeft="10dp"
                tools:ignore="Orientation">
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                android:layout_toEndOf="@id/lineAfterMenu"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/homeProfImage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/lineAfterMenu"
                android:layout_below="@id/homeProfImage"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:id="@+id/homeProfLabel"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="70dp"
                android:id="@+id/lineAfterProf"
                android:background="@color/black"
                android:layout_toEndOf="@+id/homeProfLabel"
                android:layout_marginLeft="10dp"
                tools:ignore="Orientation">
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_carthome"
                android:layout_toEndOf="@id/lineAfterProf"
                android:layout_marginLeft="20dp"
                android:id="@+id/homeCartImage"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_toEndOf="@+id/lineAfterProf"
                android:layout_below="@+id/homeCartImage"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:id="@+id/homeCartLabel"/>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="70dp"
                android:id="@+id/lineAfterCart"
                android:background="@color/black"
                android:layout_toEndOf="@+id/homeCartLabel"
                android:layout_marginLeft="10dp"
                tools:ignore="Orientation">
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeOrderImage"
                android:src="@drawable/ic_bag"
                android:layout_toEndOf="@+id/lineAfterCart"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Orders"
                android:id="@+id/homeOrderLabel"
                android:layout_toEndOf="@+id/lineAfterCart"
                android:layout_below="@+id/homeOrderImage"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>